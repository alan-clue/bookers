<div class='container px-5 px-sm-0'>

  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/info', user: @bookDetail.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(user_path(@bookDetail.user)) do %>
              <%= attachment_image_tag @bookDetail.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <br>
              <%= @bookDetail.user.name %>
            <% end %>
          </td>
          <td><%= link_to @bookDetail.title, book_path(@bookDetail) %></td>
          <td><%= @bookDetail.body %></td>
          <td>
            <% if @bookDetail.user == current_user %>
              <%= link_to "Edit", edit_book_path(@bookDetail), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @bookDetail.user == current_user %>
              <%= link_to "Destroy", book_path(@bookDetail), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
