<% send = "Create Book" if send %>
<%= form_for book do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control book_title" %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: "form-control book_body" %>
  </div>
  <div class="form-group">
    <%= f.submit send, data: { disable_with: send }, class: "btn btn-success" %>
  </div>
<% end %>